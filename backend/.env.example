# Backend Environment Variables

# Application
APP_NAME=GIL Platform API
VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://gil_user:gil_password@localhost:5432/gil_platform

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# IRT Engine Parameters
IRT_MIN_ITEMS=3
IRT_MAX_ITEMS=10
IRT_TARGET_SE=0.35
IRT_INITIAL_THETA=0.0

# Peer Prediction (BTS)
BTS_MIN_RESPONSES=5
BTS_WEIGHT_INFORMATION=1.0
BTS_WEIGHT_PREDICTION=2.0
BTS_WEIGHT_ACCURACY=1.5
BTS_WEIGHT_INSIGHT=1.0

# Redis (optional - uncomment when ready)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Analytics (optional - add when ready)
# MIXPANEL_TOKEN=
# POSTHOG_KEY=
